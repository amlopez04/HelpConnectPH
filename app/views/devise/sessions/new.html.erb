<div class="max-w-md mx-auto bg-white rounded-xl shadow-xl p-8 border border-gray-100">
  <div class="text-center mb-6">
    <h2 class="text-3xl font-bold text-gray-900 mb-2">Welcome Back</h2>
    <p class="text-gray-600">Sign in to your Para√±aqueConnect account</p>
  </div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
  <div class="mb-6">
    <%= f.label :email, class: "block text-sm font-semibold text-gray-700 mb-2" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", 
        class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 bg-gray-50 focus:bg-white" %>
  </div>

  <div class="mb-6">
    <%= f.label :password, class: "block text-sm font-semibold text-gray-700 mb-2" %>
    <%= f.password_field :password, autocomplete: "current-password", 
        class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 bg-gray-50 focus:bg-white" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-6 flex items-center">
      <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
      <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-700" %>
    </div>
  <% end %>

  <div class="mb-6">
    <%= f.submit "Sign In", class: "w-full bg-gradient-to-r from-blue-600 to-blue-700 text-white py-3 px-4 rounded-xl hover:from-blue-700 hover:to-blue-800 transition-all duration-300 font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-0.5" %>
  </div>
<% end %>

<div class="text-center text-sm">
  <%= render "devise/shared/links" %>
</div>
</div>
