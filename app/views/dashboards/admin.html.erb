<!-- Created Captain Accounts (For Testing) -->
<% if @barangay_captains.any? %>
  <div class="bg-white rounded-lg shadow-md p-6 mb-6">
    <div class="flex justify-between items-center mb-4">
      <div>
        <h2 class="text-xl font-bold text-gray-900">Created Captain Accounts</h2>
        <p class="text-gray-600 text-sm mt-1">For testing purposes - will be moved to a separate page later</p>
      </div>
      <span class="bg-gray-200 text-gray-800 px-3 py-1 rounded-full text-sm font-semibold"><%= @barangay_captains.count %> account(s)</span>
    </div>

    <div class="overflow-x-auto">
      <table class="w-full text-sm">
        <thead class="bg-gray-50 border-b">
          <tr>
            <th class="text-left py-3 px-4 font-semibold text-gray-700">Email</th>
            <th class="text-left py-3 px-4 font-semibold text-gray-700">Barangay</th>
            <th class="text-left py-3 px-4 font-semibold text-gray-700">Status</th>
            <th class="text-left py-3 px-4 font-semibold text-gray-700">Created</th>
            <th class="text-left py-3 px-4 font-semibold text-gray-700">Default Password</th>
          </tr>
        </thead>
        <tbody>
          <% @barangay_captains.each do |captain| %>
            <tr class="border-b hover:bg-gray-50">
              <td class="py-3 px-4">
                <div class="font-mono text-sm text-gray-900"><%= captain.email %></div>
              </td>
              <td class="py-3 px-4">
                <% if captain.barangay %>
                  <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded text-xs font-medium"><%= captain.barangay.name %></span>
                <% else %>
                  <span class="text-gray-400 text-xs">No barangay</span>
                <% end %>
              </td>
              <td class="py-3 px-4">
                <% if captain.confirmed_at %>
                  <span class="bg-green-100 text-green-800 px-2 py-1 rounded text-xs font-medium">✓ Confirmed</span>
                <% else %>
                  <span class="bg-yellow-100 text-yellow-800 px-2 py-1 rounded text-xs font-medium">⏳ Unconfirmed</span>
                <% end %>
              </td>
              <td class="py-3 px-4 text-gray-600 text-xs">
                <%= time_ago_in_words(captain.created_at) %> ago
              </td>
              <td class="py-3 px-4">
                <code class="bg-gray-100 px-2 py-1 rounded text-xs font-mono">Captain2024!</code>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="mt-4 bg-blue-50 border border-blue-200 rounded-lg p-3">
      <p class="text-sm text-blue-900">
        <strong>ℹ️ Note:</strong> All captains are created with the default password <code class="bg-white px-2 py-1 rounded">Captain2024!</code>. 
        They should change this password upon first login.
      </p>
    </div>
  </div>
<% end %>

<!-- Recent Reports (System-wide) -->
<div class="bg-white rounded-lg shadow-md p-6">
  <div class="flex justify-between items-center mb-4">
    <h2 class="text-2xl font-bold text-gray-900">Recent Reports (All Barangays)</h2>
    <%= link_to "View All →", reports_path, class: "text-blue-600 hover:text-blue-800 font-semibold" %>
  </div>
  
  <% if @recent_reports.any? %>
    <div class="space-y-4">
      <% @recent_reports.each do |report| %>
        <div class="border-l-4 <%= report.pending? ? 'border-yellow-500 bg-yellow-50' : report.in_progress? ? 'border-orange-500 bg-orange-50' : report.resolved? ? 'border-green-500 bg-green-50' : 'border-gray-500 bg-gray-50' %> p-4 rounded">
          <div class="flex justify-between items-start">
            <div class="flex-1">
              <h3 class="font-bold text-lg mb-2"><%= report.title %></h3>
              <div class="flex flex-wrap gap-2 text-sm mb-2">
                <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full"><%= report.category.name %></span>
                <span class="bg-gray-100 text-gray-800 px-3 py-1 rounded-full"><%= report.barangay.name %></span>
                <span class="<%= report.pending? ? 'bg-yellow-100 text-yellow-800' : report.in_progress? ? 'bg-orange-100 text-orange-800' : report.resolved? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %> px-3 py-1 rounded-full"><%= report.status.titleize %></span>
                <span class="bg-purple-100 text-purple-800 px-3 py-1 rounded-full"><%= report.priority.titleize %></span>
              </div>
              <p class="text-gray-600 text-sm mb-2"><%= truncate(report.description, length: 120) %></p>
              <p class="text-gray-500 text-xs">Reported by <%= report.user.email %> • <%= time_ago_in_words(report.created_at) %> ago</p>
            </div>
            <div class="ml-4">
              <%= link_to "View →", report, class: "bg-blue-600 text-white px-4 py-2 rounded-lg font-semibold hover:bg-blue-700 transition text-sm whitespace-nowrap" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12 text-gray-500">
      <p class="text-lg">No reports in the system yet.</p>
    </div>
  <% end %>
</div>

