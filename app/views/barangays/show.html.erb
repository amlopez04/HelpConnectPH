<!-- Header -->
<div class="mb-6">
  <div class="flex items-center mb-4">
    <%= link_to barangays_path, class: "text-blue-600 hover:text-blue-800 mr-4" do %>
      ← Back to Barangays
    <% end %>
  </div>
  
  <div class="flex justify-between items-start">
    <div>
      <h1 class="text-3xl font-bold text-gray-900 mb-2">🏘️ <%= @barangay.name %></h1>
      <% if @barangay.address.present? %>
        <p class="text-gray-600 mb-2">📍 <%= @barangay.address %></p>
      <% end %>
      <% if @barangay.description.present? %>
        <p class="text-gray-600"><%= @barangay.description %></p>
      <% end %>
    </div>
    
    <% if policy(@barangay).edit? %>
      <div class="flex gap-2">
        <%= link_to edit_barangay_path(@barangay), class: "bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition" do %>
          ✏️ Edit
        <% end %>
        <% if policy(@barangay).destroy? %>
          <%= button_to @barangay, method: :delete, 
              data: { turbo_confirm: "Are you sure? This will affect #{@barangay.reports.count} #{'report'.pluralize(@barangay.reports.count)} and #{@barangay.users.count} #{'user'.pluralize(@barangay.users.count)}." },
              class: "bg-red-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-red-700 transition" do %>
            🗑️ Delete
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<!-- Contact Information -->
<div class="bg-white rounded-lg shadow-md p-6 mb-6">
  <h2 class="text-xl font-bold text-gray-900 mb-4">Contact Information</h2>
  <div class="grid md:grid-cols-2 gap-6">
    <div>
      <h3 class="text-sm font-semibold text-gray-700 mb-2">Phone Number</h3>
      <p class="text-gray-900">
        <% if @barangay.contact_number.present? %>
          📞 <%= @barangay.contact_number %>
        <% else %>
          <span class="text-gray-400 italic">Not provided</span>
        <% end %>
      </p>
    </div>
    <div>
      <h3 class="text-sm font-semibold text-gray-700 mb-2">Email Address</h3>
      <p class="text-gray-900">
        <% if @barangay.contact_email.present? %>
          📧 <%= @barangay.contact_email %>
        <% else %>
          <span class="text-gray-400 italic">Not provided</span>
        <% end %>
      </p>
    </div>
  </div>

  <% if @barangay.latitude.present? && @barangay.longitude.present? %>
    <div class="mt-4 pt-4 border-t">
      <h3 class="text-sm font-semibold text-gray-700 mb-2">Geographic Coordinates</h3>
      <p class="text-gray-900">📍 <%= @barangay.latitude.round(6) %>, <%= @barangay.longitude.round(6) %></p>
    </div>
  <% end %>
</div>

<!-- Barangay Captain -->
<div class="bg-white rounded-lg shadow-md p-6 mb-6">
  <div class="flex justify-between items-center mb-4">
    <h2 class="text-xl font-bold text-gray-900">Barangay Captain</h2>
    <% if policy(@barangay).update? %>
      <%= link_to new_admin_barangay_captain_path(barangay_id: @barangay.id), class: "bg-blue-600 text-white px-4 py-2 rounded-lg font-semibold hover:bg-blue-700 transition text-sm" do %>
        ➕ Assign Captain
      <% end %>
    <% end %>
  </div>
  
  <% captain = @barangay.users.barangay_official.first %>
  <% if captain %>
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
      <p class="font-semibold text-blue-900 mb-2">👤 <%= captain.email %></p>
      <div class="text-sm text-blue-800">
        <p>Role: Barangay Official</p>
        <% if captain.confirmed_at.present? %>
          <p>✅ Email confirmed on <%= captain.confirmed_at.strftime("%B %d, %Y") %></p>
        <% else %>
          <p>⚠️ Email not confirmed</p>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6 text-center">
      <p class="text-yellow-800">⚠️ No captain assigned to this barangay yet.</p>
    </div>
  <% end %>
</div>

<!-- Statistics -->
<div class="grid md:grid-cols-4 gap-6 mb-6">
  <div class="bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg shadow-lg p-6 text-white">
    <div class="text-sm opacity-90 mb-1">Total Reports</div>
    <div class="text-4xl font-bold"><%= @barangay.reports.count %></div>
  </div>
  <div class="bg-gradient-to-br from-yellow-500 to-yellow-600 rounded-lg shadow-lg p-6 text-white">
    <div class="text-sm opacity-90 mb-1">Pending</div>
    <div class="text-4xl font-bold"><%= @barangay.reports.pending.count rescue 0 %></div>
  </div>
  <div class="bg-gradient-to-br from-orange-500 to-orange-600 rounded-lg shadow-lg p-6 text-white">
    <div class="text-sm opacity-90 mb-1">In Progress</div>
    <div class="text-4xl font-bold"><%= @barangay.reports.in_progress.count rescue 0 %></div>
  </div>
  <div class="bg-gradient-to-br from-green-500 to-green-600 rounded-lg shadow-lg p-6 text-white">
    <div class="text-sm opacity-90 mb-1">Resolved</div>
    <div class="text-4xl font-bold"><%= @barangay.reports.resolved.count rescue 0 %></div>
  </div>
</div>

<!-- Reports -->
<div class="bg-white rounded-lg shadow-md p-6">
  <h2 class="text-xl font-bold text-gray-900 mb-4">Recent Reports</h2>
  
  <% if @reports.any? %>
    <div class="space-y-4">
      <% @reports.limit(10).each do |report| %>
        <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition">
          <div class="flex justify-between items-start mb-2">
            <div class="flex-1">
              <h3 class="font-bold text-gray-900 mb-1"><%= report.title %></h3>
              <div class="flex flex-wrap gap-2 mb-2">
                <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded-full text-xs font-semibold">
                  <%= report.category.name %>
                </span>
                <span class="<%= report.pending? ? 'bg-yellow-100 text-yellow-800' : report.in_progress? ? 'bg-orange-100 text-orange-800' : report.resolved? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %> px-2 py-1 rounded-full text-xs font-semibold">
                  <%= report.status.titleize %>
                </span>
                <span class="<%= report.critical? ? 'bg-red-100 text-red-800' : report.high? ? 'bg-orange-100 text-orange-800' : report.medium? ? 'bg-yellow-100 text-yellow-800' : 'bg-gray-100 text-gray-800' %> px-2 py-1 rounded-full text-xs font-semibold">
                  <%= report.priority.titleize %>
                </span>
              </div>
            </div>
          </div>
          
          <p class="text-gray-600 text-sm mb-3"><%= truncate(report.description, length: 150) %></p>
          
          <div class="flex justify-between items-center text-sm">
            <div class="text-gray-500">
              <span>Reported by <%= report.user.email %></span>
              <span class="mx-2">•</span>
              <span><%= time_ago_in_words(report.created_at) %> ago</span>
            </div>
            <%= link_to "View →", report, class: "text-blue-600 hover:text-blue-800 font-semibold" %>
          </div>
        </div>
      <% end %>
      
      <% if @reports.count > 10 %>
        <div class="text-center pt-4">
          <p class="text-gray-600">Showing 10 of <%= @reports.count %> reports</p>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <div class="text-6xl mb-4">📝</div>
      <p class="text-gray-600">No reports from this barangay yet.</p>
    </div>
  <% end %>
</div>

