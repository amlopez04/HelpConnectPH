<div class="mb-6">
  <div class="flex items-center mb-2">
    <%= link_to admin_users_path, class: "text-blue-600 hover:text-blue-800 mr-3" do %>
      ← Back to Users
    <% end %>
  </div>
  <h1 class="text-3xl font-bold text-gray-900"><%= @user.email %></h1>
  <p class="text-gray-600">Role: <span class="font-semibold"><%= @user.role.titleize %></span></p>
</div>

<!-- Stats -->
<div class="grid md:grid-cols-4 gap-4 mb-6">
  <div class="bg-white rounded-lg shadow p-4">
    <div class="text-sm text-gray-600">Total Reports</div>
    <div class="text-2xl font-bold text-blue-600"><%= @total_reports %></div>
  </div>
  <div class="bg-white rounded-lg shadow p-4">
    <div class="text-sm text-gray-600">Potential Spam</div>
    <div class="text-2xl font-bold text-red-600"><%= @potential_spam_count %></div>
  </div>
  <div class="bg-white rounded-lg shadow p-4">
    <div class="text-sm text-gray-600">Gibberish Submissions</div>
    <div class="text-2xl font-bold text-orange-600"><%= @gibberish_count %></div>
  </div>
  <div class="bg-white rounded-lg shadow p-4">
    <div class="text-sm text-gray-600">Pending Approval</div>
    <div class="text-2xl font-bold text-purple-600"><%= @status_counts["pending_approval"] || 0 %></div>
  </div>
</div>

<!-- Status breakdown -->
<div class="bg-white rounded-lg shadow p-4 mb-6">
  <h2 class="text-xl font-bold text-gray-900 mb-3">Status Breakdown</h2>
  <div class="flex flex-wrap gap-3 text-sm">
    <span class="px-3 py-1 rounded-full bg-yellow-100 text-yellow-800">Pending: <%= @status_counts["pending"] || 0 %></span>
    <span class="px-3 py-1 rounded-full bg-orange-100 text-orange-800">In Progress: <%= @status_counts["in_progress"] || 0 %></span>
    <span class="px-3 py-1 rounded-full bg-green-100 text-green-800">Resolved: <%= @status_counts["resolved"] || 0 %></span>
    <span class="px-3 py-1 rounded-full bg-gray-100 text-gray-800">Closed: <%= @status_counts["closed"] || 0 %></span>
    <span class="px-3 py-1 rounded-full bg-pink-100 text-pink-800">Reopen Requested: <%= @status_counts["reopen_requested"] || 0 %></span>
  </div>
  
</div>

<!-- Recent Reports -->
<div class="bg-white rounded-lg shadow overflow-hidden">
  <div class="px-6 py-4 border-b">
    <h2 class="text-xl font-bold text-gray-900">Recent Reports</h2>
  </div>
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Title</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Category</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Barangay</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Spam</th>
          <th class="px-6 py-3"></th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @reports.limit(20).each do |r| %>
          <tr>
            <td class="px-6 py-4"><div class="font-medium text-gray-900"><%= r.title %></div><div class="text-xs text-gray-500"><%= time_ago_in_words(r.created_at) %> ago</div></td>
            <td class="px-6 py-4 text-sm text-gray-700"><%= r.category.name %></td>
            <td class="px-6 py-4 text-sm text-gray-700"><%= r.barangay.name %></td>
            <td class="px-6 py-4 text-sm"><span class="px-2 py-1 rounded-full <%= r.pending_approval? ? 'bg-purple-100 text-purple-800' : r.pending? ? 'bg-yellow-100 text-yellow-800' : r.in_progress? ? 'bg-orange-100 text-orange-800' : r.resolved? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>"><%= r.status.titleize %></span></td>
            <td class="px-6 py-4 text-sm">
              <% if r.random_gibberish?(r.description) %>
                <span class="px-2 py-1 rounded-full bg-orange-100 text-orange-800">Gibberish</span>
              <% elsif r.potential_spam? %>
                <span class="px-2 py-1 rounded-full bg-red-100 text-red-800">Potential Spam</span>
              <% else %>
                <span class="text-gray-400">—</span>
              <% end %>
            </td>
            <td class="px-6 py-4 text-right text-sm">
              <%= link_to "View", report_path(r), class: "text-blue-600 hover:text-blue-800 font-semibold" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


