<div class="max-w-2xl mx-auto">
  <!-- Header -->
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Create Barangay Captain Account</h1>
    <p class="text-gray-600 mt-2">Create an official account for a barangay captain. Each barangay can only have one captain.</p>
  </div>

  <!-- Check if all barangays have captains -->
  <% if @available_barangays.empty? %>
    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6 text-center">
      <div class="text-4xl mb-3">✅</div>
      <h3 class="text-lg font-semibold text-gray-900 mb-2">All Barangays Have Captains</h3>
      <p class="text-gray-600 mb-4">Every barangay in Parañaque City already has a captain assigned.</p>
      <%= link_to "← Back to Dashboard", dashboard_path, class: "inline-block bg-blue-600 text-white px-6 py-2 rounded-lg font-semibold hover:bg-blue-700 transition" %>
    </div>
  <% else %>
    <!-- Form Card -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <%= form_with model: @user, url: admin_barangay_captains_path, method: :post, local: true do |f| %>
        <!-- Error Messages -->
        <% if @user.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
            <h3 class="text-red-800 font-semibold mb-2">
              <%= pluralize(@user.errors.count, "error") %> prevented this account from being created:
            </h3>
            <ul class="list-disc list-inside text-red-700">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- Email Field -->
        <div class="mb-6">
          <%= f.label :email, "Captain's Email Address", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.email_field :email, 
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
            placeholder: "captain@paranaque.gov.ph",
            required: true,
            autofocus: true %>
          <p class="text-sm text-gray-500 mt-1">📧 Use a valid email address (can be test email for development)</p>
        </div>

        <!-- Barangay Selection -->
        <div class="mb-6">
          <%= label_tag "user[barangay_id]", "Assign to Barangay", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= select_tag "user[barangay_id]", 
            options_from_collection_for_select(@available_barangays, :id, :name),
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
            prompt: "Select a barangay...",
            required: true %>
          <p class="text-sm text-gray-500 mt-1">📍 Only barangays without captains are shown</p>
        </div>

        <!-- Info Box -->
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
          <h4 class="font-semibold text-blue-900 mb-2">ℹ️ Important Information:</h4>
          <ul class="text-sm text-blue-800 space-y-1">
            <li>• A secure temporary password will be auto-generated</li>
            <li>• The account will be auto-confirmed (no email verification needed)</li>
            <li>• Credentials will be displayed after creation</li>
            <li>• Share the credentials with the captain securely</li>
            <li>• Captain must change password on first login</li>
          </ul>
        </div>

        <!-- Form Actions -->
        <div class="flex gap-3">
          <%= f.submit "Create Captain Account", class: "flex-1 bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition cursor-pointer" %>
          <%= link_to "Cancel", dashboard_path, class: "flex-1 bg-gray-200 text-gray-800 px-6 py-3 rounded-lg font-semibold hover:bg-gray-300 transition text-center" %>
        </div>
      <% end %>
    </div>

    <!-- Available Barangays Info -->
    <div class="mt-6 bg-gray-50 rounded-lg p-4">
      <h4 class="font-semibold text-gray-900 mb-2">📋 Barangays Without Captains: <%= @available_barangays.count %></h4>
      <div class="text-sm text-gray-600">
        <% if @available_barangays.count <= 5 %>
          <%= @available_barangays.pluck(:name).join(", ") %>
        <% else %>
          <%= @available_barangays.first(5).pluck(:name).join(", ") %>, and <%= @available_barangays.count - 5 %> more...
        <% end %>
      </div>
    </div>
  <% end %>
</div>

