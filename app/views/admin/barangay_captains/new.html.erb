<div class="max-w-2xl mx-auto">
  <!-- Header -->
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Create Barangay Captain Account</h1>
    <p class="text-gray-600 mt-2">Create an official account for <strong><%= @barangay.name %></strong> barangay captain.</p>
  </div>

  <!-- Barangay Info Display -->
  <div class="bg-blue-50 border-l-4 border-blue-400 p-4 mb-6 rounded">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
        </svg>
      </div>
      <div class="ml-3">
        <p class="text-sm font-medium text-blue-800">
          üìç <strong>Assigning to:</strong> <%= @barangay.name %>
          <% if @barangay.address.present? %>
            <br><span class="text-blue-700">Address: <%= @barangay.address %></span>
          <% end %>
        </p>
      </div>
    </div>
  </div>

  <!-- Form Card -->
  <div class="bg-white rounded-lg shadow-md p-6">
      <%= form_with model: @user, url: admin_barangay_captains_path, method: :post, local: true do |f| %>
        <!-- Error Messages -->
        <% if @user.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
            <h3 class="text-red-800 font-semibold mb-2">
              <%= pluralize(@user.errors.count, "error") %> prevented this account from being created:
            </h3>
            <ul class="list-disc list-inside text-red-700">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- Email Field -->
        <div class="mb-6">
          <%= f.label :email, "Captain's Email Address", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.email_field :email, 
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
            placeholder: "captain@paranaque.gov.ph",
            required: true,
            autofocus: true %>
          <p class="text-sm text-gray-500 mt-1">üìß Use a valid email address (can be test email for development)</p>
        </div>

        <!-- Hidden Barangay ID -->
        <%= hidden_field_tag "user[barangay_id]", @barangay.id %>

        <!-- Info Box -->
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
          <h4 class="font-semibold text-blue-900 mb-2">‚ÑπÔ∏è Important Information:</h4>
          <ul class="text-sm text-blue-800 space-y-1">
            <li>‚Ä¢ A secure temporary password will be auto-generated</li>
            <li>‚Ä¢ The account will be auto-confirmed (no email verification needed)</li>
            <li>‚Ä¢ Credentials will be displayed after creation</li>
            <li>‚Ä¢ Share the credentials with the captain securely</li>
            <li>‚Ä¢ Captain must change password on first login</li>
          </ul>
        </div>

        <!-- Form Actions -->
        <div class="flex flex-col sm:flex-row gap-3">
          <%= f.submit "Create Captain Account", class: "flex-1 bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition cursor-pointer" %>
          <%= link_to "Cancel", barangay_path(@barangay), class: "flex-1 bg-gray-200 text-gray-800 px-6 py-3 rounded-lg font-semibold hover:bg-gray-300 transition text-center" %>
        </div>
      <% end %>
  </div>
</div>

