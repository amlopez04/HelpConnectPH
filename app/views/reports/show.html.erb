<!-- Back Button -->
<div class="mb-4">
  <%= link_to reports_path, class: "text-blue-600 hover:text-blue-800 font-semibold inline-flex items-center" do %>
    â† Back to Reports
  <% end %>
</div>

<!-- Report Card -->
<div class="bg-white rounded-lg shadow-lg overflow-hidden mb-6">
    <!-- Header -->
    <div class="bg-gradient-to-r from-blue-600 to-blue-700 px-4 sm:px-8 py-4 sm:py-6 text-white">
      <h1 class="text-2xl sm:text-3xl font-bold mb-1 sm:mb-2 leading-tight"><%= @report.title %></h1>
      <div class="flex items-center text-blue-100">
        <span><%= @report.created_at.strftime("%B %d, %Y at %I:%M %p") %></span>
      </div>
    </div>

  <!-- Content -->
  <div class="p-4 sm:p-8">
    <!-- Status & Priority Badges -->
    <div class="flex flex-wrap gap-3 mb-6">
      <span class="bg-blue-100 text-blue-800 px-4 py-2 rounded-full text-sm font-semibold">
        ğŸ·ï¸ <%= @report.category.name %>
      </span>
      <span class="<%= @report.pending_approval? ? 'bg-purple-100 text-purple-800' : @report.pending? ? 'bg-yellow-100 text-yellow-800' : @report.in_progress? ? 'bg-orange-100 text-orange-800' : @report.resolved? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %> px-4 py-2 rounded-full text-sm font-semibold">
        <%= @report.status.titleize %>
      </span>
      <% unless current_user&.resident? %>
        <span class="<%= @report.critical? ? 'bg-red-100 text-red-800' : @report.high? ? 'bg-orange-100 text-orange-800' : @report.medium? ? 'bg-yellow-100 text-yellow-800' : 'bg-gray-100 text-gray-800' %> px-4 py-2 rounded-full text-sm font-semibold">
          <%= @report.priority.titleize %> Priority
        </span>
      <% end %>
    </div>

    <!-- Admin Reopen Approval Actions -->
    <% if current_user&.admin? && @report.reopen_requested? %>
      <div class="bg-gradient-to-r from-orange-50 to-yellow-50 border border-orange-200 rounded-lg p-6 mb-6">
        <h3 class="text-lg font-bold text-orange-900 mb-3">Request to Reopen Case</h3>
        <p class="text-orange-700 mb-4">This report has been requested to be reopened by the resident. Please review and approve or decline.</p>
        
        <div class="flex gap-4">
          <%= button_to approve_reopen_report_path(@report), method: :post, data: { turbo: false, confirm: "Are you sure you want to approve this reopen request?" }, class: "bg-green-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-green-700 transition flex items-center gap-2" do %>
            âœ… Approve Reopen Request
          <% end %>
          <%= button_to reject_report_path(@report), method: :post, data: { turbo: false, confirm: "Are you sure you want to keep this report closed?" }, class: "bg-red-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-red-700 transition flex items-center gap-2" do %>
            âŒ Deny Reopen Request
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Admin Approval Actions (only for pending_approval reports) -->
    <% if current_user&.admin? && @report.pending_approval? %>
      <div class="bg-gradient-to-r from-purple-50 to-blue-50 border border-purple-200 rounded-lg p-6 mb-6">
        <h3 class="text-lg font-bold text-purple-900 mb-3">Admin Review Required</h3>
        <p class="text-purple-700 mb-4">This report is waiting for your approval before it can be sent to the barangay captain.</p>
        
        <!-- Duplicate Detection -->
        <% if @report.potential_duplicates.any? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-4">
            <h4 class="font-semibold text-red-800 mb-2">âš ï¸ Potential Duplicates Detected</h4>
            <p class="text-red-700 text-sm mb-2">Found <%= @report.potential_duplicates.count %> similar reports within 100 meters:</p>
            <ul class="text-red-700 text-sm list-disc list-inside">
              <% @report.potential_duplicates.each do |duplicate| %>
                <li><strong>Report #<%= duplicate.id %>:</strong> <%= duplicate.title %> (<%= duplicate.status.titleize %>)</li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- Spam Detection -->
        <% if @report.potential_spam? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-4">
            <h4 class="font-semibold text-red-800 mb-2">âš ï¸ Potential Spam Detected</h4>
            <p class="text-red-700 text-sm">This report has been flagged for potential spam based on user reporting patterns.</p>
          </div>
        <% end %>

        <!-- Action Buttons -->
        <div class="flex gap-4">
          <%= button_to approve_report_path(@report), method: :post, data: { turbo: false, confirm: "Are you sure you want to approve this report? It will be sent to the barangay captain." }, class: "bg-green-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-green-700 transition flex items-center gap-2" do %>
            âœ… Approve Report
          <% end %>
          <%= button_to reject_report_path(@report), method: :post, data: { turbo: false, confirm: "Are you sure you want to reject this report? It will be closed and the reporter will be notified." }, class: "bg-red-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-red-700 transition flex items-center gap-2" do %>
            âŒ Reject Report
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Description -->
    <div class="mb-6">
      <h2 class="text-lg font-bold text-gray-900 mb-3">Description</h2>
      <p class="text-gray-700 leading-relaxed whitespace-pre-line"><%= @report.description %></p>
    </div>

    <!-- Location & Details -->
    <div class="grid md:grid-cols-2 gap-6 mb-6">
      <div>
        <h3 class="text-sm font-semibold text-gray-600 mb-2">ğŸ“ Location</h3>
        <p class="text-gray-900"><%= @report.address %></p>
      </div>
      <div>
        <h3 class="text-sm font-semibold text-gray-600 mb-2">ğŸ˜ï¸ Barangay</h3>
        <p class="text-gray-900"><%= @report.barangay.name %></p>
      </div>
      <div>
        <h3 class="text-sm font-semibold text-gray-600 mb-2">ğŸ·ï¸ Category</h3>
        <p class="text-gray-900"><%= @report.category.name %></p>
      </div>
      <% if @report.resolved_at.present? %>
        <div>
          <h3 class="text-sm font-semibold text-gray-600 mb-2">âœ… Resolved Date</h3>
          <p class="text-gray-900"><%= @report.resolved_at.strftime("%B %d, %Y") %></p>
        </div>
      <% end %>
    </div>

    <!-- Map -->
    <% if @report.latitude.present? && @report.longitude.present? %>
      <div class="mb-6">
        <h2 class="text-lg font-bold text-gray-900 mb-3">ğŸ“ Location Map</h2>
        <iframe
          width="100%"
          height="384"
          style="border:0; border-radius: 0.5rem;"
          loading="lazy"
          allowfullscreen
          referrerpolicy="no-referrer-when-downgrade"
          src="https://www.google.com/maps/embed/v1/place?key=<%= ENV['GOOGLE_MAPS_API_KEY'] %>&q=<%= @report.latitude %>,<%= @report.longitude %>&zoom=15"
          class="rounded-lg shadow-md">
        </iframe>
      </div>
    <% elsif @report.address.present? %>
      <div class="mb-6">
        <h2 class="text-lg font-bold text-gray-900 mb-3">ğŸ“ Location Map</h2>
        <iframe
          width="100%"
          height="384"
          style="border:0; border-radius: 0.5rem;"
          loading="lazy"
          allowfullscreen
          referrerpolicy="no-referrer-when-downgrade"
          src="https://www.google.com/maps/embed/v1/place?key=<%= ENV['GOOGLE_MAPS_API_KEY'] %>&q=<%= URI.encode_www_form_component(@report.address) %>&zoom=15"
          class="rounded-lg shadow-md">
        </iframe>
      </div>
    <% end %>

    <!-- Photos -->
    <% if @report.photos.attached? %>
      <div class="mb-6">
        <h2 class="text-lg font-bold text-gray-900 mb-3">ğŸ“· Photos (<%= @report.photos.count %>)</h2>
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
          <% @report.photos.each do |photo| %>
            <%= image_tag photo, class: "w-full h-48 object-cover rounded-lg shadow-md hover:shadow-xl transition cursor-pointer" %>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Quick Status Update Buttons (Officials only) -->
    <% if current_user&.barangay_official? && !@report.pending_approval? && !@report.resolved? %>
      <div class="bg-gray-50 border border-gray-200 rounded-lg p-6 mb-6">
        <h3 class="text-lg font-bold text-gray-900 mb-4">Quick Status Update</h3>
        <div class="flex flex-wrap gap-3">
          <% unless @report.in_progress? %>
            <%= button_to "Set In Progress", update_status_report_path(@report, status: 'in_progress'), method: :post, data: { turbo: false }, class: "bg-orange-600 text-white px-6 py-2 rounded-lg font-semibold hover:bg-orange-700 transition" %>
          <% end %>
          <% unless @report.resolved? %>
            <%= button_to "Set Resolved", update_status_report_path(@report, status: 'resolved'), method: :post, data: { turbo: false }, class: "bg-green-600 text-white px-6 py-2 rounded-lg font-semibold hover:bg-green-700 transition" %>
          <% end %>
          
        </div>
      </div>
    <% end %>

    <!-- Actions -->
    <% if policy(@report).request_reopen? %>
      <div class="bg-<%= @report.closed? ? 'gray' : 'green' %>-50 border border-<%= @report.closed? ? 'gray' : 'green' %>-200 rounded-lg p-4 pt-6 border-t">
        <div class="text-center">
          <div class="text-<%= @report.closed? ? 'gray' : 'green' %>-600 mb-2">
            <% if @report.closed? %>
              <svg class="w-8 h-8 mx-auto mb-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
              </svg>
            <% else %>
              <svg class="w-8 h-8 mx-auto mb-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            <% end %>
          </div>
          <h3 class="text-lg font-semibold text-<%= @report.closed? ? 'gray' : 'green' %>-700 mb-2">
            <% if @report.closed? %>Report Closed<% else %>Report Resolved!<% end %>
          </h3>
          <p class="text-<%= @report.closed? ? 'gray' : 'green' %>-600 mb-4">
            <% if @report.closed? %>
              This report has been closed. If you believe this needs to be reopened, you can request admin approval.
            <% else %>
              This report has been resolved. If you believe the issue is not fully resolved or needs attention, you can request to reopen it.
            <% end %>
          </p>
          <div class="flex gap-4 justify-center">
            <%= button_to request_reopen_report_path(@report), method: :post, class: "bg-orange-600 text-white px-6 py-2 rounded-lg font-semibold hover:bg-orange-700 transition" do %>
              Request to Reopen Case
            <% end %>
            <%= link_to "Submit New Report", new_report_path, class: "bg-blue-600 text-white px-6 py-2 rounded-lg font-semibold hover:bg-blue-700 transition" %>
          </div>
        </div>
      </div>
    <% elsif policy(@report).update? || policy(@report).destroy? %>
      <div class="flex gap-4 pt-6 border-t">
        <% if policy(@report).update? && !current_user&.barangay_official? %>
          <%= link_to edit_report_path(@report), class: "bg-blue-600 text-white px-6 py-2 rounded-lg font-semibold hover:bg-blue-700 transition" do %>
            âœï¸ Edit Report
          <% end %>
        <% end %>
        <% if policy(@report).destroy? %>
          <%= button_to report_path(@report), method: :delete, data: { turbo: false, confirm: "Are you sure you want to delete this report?" }, class: "bg-red-600 text-white px-6 py-2 rounded-lg font-semibold hover:bg-red-700 transition" do %>
            ğŸ—‘ï¸ Delete Report
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<!-- Comments Section -->
<div class="bg-white rounded-lg shadow-lg p-8">
  <h2 class="text-2xl font-bold text-gray-900 mb-6">ğŸ’¬ Comments (<%= @report.comments.size %>)</h2>

  <!-- Add Comment Form -->
  <% if user_signed_in? %>
    <div class="bg-gray-50 rounded-lg p-6 mb-6">
      <%= form_with(model: [@report, Comment.new], data: { turbo: false }) do |f| %>
        <div class="mb-4">
          <%= f.text_area :content, rows: 4, placeholder: "Add a comment...", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
        <%= f.submit "Post Comment", class: "bg-blue-600 text-white px-6 py-2 rounded-lg font-semibold hover:bg-blue-700 transition cursor-pointer" %>
      <% end %>
    </div>
  <% end %>

  <!-- Comments List -->
  <% if @report.comments.any? %>
    <div class="space-y-4">
      <% @report.comments.each do |comment| %>
        <div class="border-l-4 border-blue-500 bg-gray-50 p-4 rounded">
          <div class="flex justify-between items-start mb-2">
            <div>
              <span class="font-semibold text-gray-900"><%= comment.user.email %></span>
              <span class="text-sm text-gray-500 ml-2"><%= time_ago_in_words(comment.created_at) %> ago</span>
            </div>
            <% if policy(comment).destroy? %>
              <%= button_to report_comment_path(@report, comment), method: :delete, data: { turbo: false, confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-800 text-sm" do %>
                ğŸ—‘ï¸ Delete
              <% end %>
            <% end %>
          </div>
          <p class="text-gray-700 whitespace-pre-line"><%= comment.content %></p>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-center text-gray-500 py-8">No comments yet. Be the first to comment!</p>
  <% end %>
</div>

