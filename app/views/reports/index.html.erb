<!-- Header -->
<div class="mb-6 flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4">
  <div class="flex-1">
    <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Community Reports</h1>
    <p class="text-gray-600 mt-2 text-sm sm:text-base">View and track community issues reported by residents.</p>
  </div>
  <% if user_signed_in? && current_user.resident? %>
    <%= link_to new_report_path, class: "bg-blue-600 text-white px-4 py-2 sm:px-6 sm:py-3 rounded-lg font-semibold hover:bg-blue-700 transition inline-flex items-center text-sm sm:text-base" do %>
      <svg class="w-4 h-4 sm:w-5 sm:h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
        <path d="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z"/>
      </svg>
      <span class="hidden sm:inline">New Report</span>
      <span class="sm:hidden">New</span>
    <% end %>
  <% end %>
</div>

<!-- Filters -->
<div class="bg-white rounded-lg shadow-md p-4 mb-6">
  <!-- Removed resident category chips; unified filter UI across roles -->
  
  <div class="flex gap-2 mb-4 overflow-x-auto no-scrollbar">
    <% 
      # Build filter params that preserve admin filters when clicking status buttons
      filter_params = {}
      if current_user&.admin?
        filter_params[:search] = params[:search] if params[:search].present?
        filter_params[:barangay_id] = params[:barangay_id] if params[:barangay_id].present?
        filter_params[:spam] = params[:spam] if params[:spam] == "true"
      end
      # Preserve category filter
      filter_params[:category_id] = params[:category_id] if params[:category_id].present?
    %>
    <%= link_to "All", reports_path(filter_params.except(:status)), class: "px-4 py-2 rounded-lg font-semibold #{params[:status].blank? ? 'bg-blue-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'} transition" %>
    <% if current_user&.admin? %>
      <%= link_to "To Approve", reports_path(filter_params.merge(status: 'pending_approval')), class: "px-4 py-2 rounded-lg font-semibold #{params[:status].to_s == 'pending_approval' ? 'bg-purple-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'} transition" %>
    <% end %>
    <%= link_to "Pending", reports_path(filter_params.merge(status: 'pending')), class: "px-4 py-2 rounded-lg font-semibold #{params[:status].to_s == 'pending' ? 'bg-yellow-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'} transition" %>
    <%= link_to "In Progress", reports_path(filter_params.merge(status: 'in_progress')), class: "px-4 py-2 rounded-lg font-semibold #{params[:status].to_s == 'in_progress' ? 'bg-orange-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'} transition" %>
    <%= link_to "Resolved", reports_path(filter_params.merge(status: 'resolved')), class: "px-4 py-2 rounded-lg font-semibold #{params[:status].to_s == 'resolved' ? 'bg-green-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'} transition" %>
    <% if current_user&.admin? %>
      <%= link_to "Reopen Requested", reports_path(filter_params.merge(status: 'reopen_requested')), class: "px-4 py-2 rounded-lg font-semibold #{params[:status].to_s == 'reopen_requested' ? 'bg-pink-200 text-pink-800' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'} transition" %>
    <% end %>
  </div>
  
  <!-- Admin/Official/Resident Filters (role-specific fields) -->
  <% if current_user&.admin? %>
    <%= form_with url: reports_path, method: :get, local: true, class: "space-y-3", data: { controller: "autosubmit", autosubmit_delay_value: 400 } do |f| %>
      <%= f.hidden_field :status, value: params[:status] %>
      
      <!-- Search and Quick Filters Row -->
      <div class="flex flex-col sm:flex-row flex-wrap gap-3 items-stretch sm:items-end">
        <!-- Search -->
        <div class="flex-1 min-w-[250px]">
          <%= f.label :search, "Search Reports:", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :search, 
              placeholder: "Search by title, description, or address...", 
              value: params[:search],
              data: { action: "input->autosubmit#schedule" },
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500" %>
        </div>
        
        <!-- Category Filter -->
        <div class="sm:w-auto">
          <%= f.label :category_id, "Category:", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.collection_select :category_id, Category.all.order(:name), :id, :name,
              { prompt: "All Categories", selected: params[:category_id] },
              { class: "px-3 py-2 border border-gray-300 rounded-lg" } %>
        </div>

        <!-- Barangay Filter -->
        <div class="sm:w-auto">
          <%= f.label :barangay_id, "Barangay:", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.collection_select :barangay_id, Barangay.all, :id, :name, 
              { prompt: "All Barangays", selected: params[:barangay_id] }, 
              { class: "px-3 py-2 border border-gray-300 rounded-lg" } %>
        </div>
        
        <!-- Spam Filter Toggle -->
        <div class="flex items-center">
          <label class="flex items-center cursor-pointer">
            <%= f.check_box :spam, { checked: params[:spam] == "true" }, "true", "" %>
            <span class="ml-2 text-sm font-medium text-gray-700">Show Spam Only</span>
          </label>
        </div>
        
        <!-- Submit Button -->
        <div class="sm:w-auto">
          <%= f.submit "Apply Filters", class: "w-full sm:w-auto bg-blue-600 text-white px-6 py-2 rounded-lg font-semibold hover:bg-blue-700 transition" %>
        </div>
      </div>
      
      <!-- Active Filters Display -->
      <% if params[:barangay_id].present? || params[:search].present? || params[:spam] == "true" || params[:category_id].present? %>
        <div class="flex flex-wrap gap-2 items-center text-sm">
          <span class="font-medium text-gray-700">Active filters:</span>
          <% if params[:category_id].present? %>
            <span class="bg-indigo-100 text-indigo-800 px-3 py-1 rounded-full">
              Category: <%= Category.find(params[:category_id]).name %>
              <%= link_to "√ó", reports_path(params.permit(:status, :search, :barangay_id, :spam).except(:category_id)), class: "ml-1 hover:text-indigo-900" %>
            </span>
          <% end %>
          <% if params[:search].present? %>
            <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full">
              Search: "<%= params[:search] %>"
              <%= link_to "√ó", reports_path(params.permit(:status, :category_id, :barangay_id, :spam).except(:search)), class: "ml-1 hover:text-blue-900" %>
            </span>
          <% end %>
          <% if params[:barangay_id].present? %>
            <span class="bg-purple-100 text-purple-800 px-3 py-1 rounded-full">
              Barangay: <%= Barangay.find(params[:barangay_id]).name %>
              <%= link_to "√ó", reports_path(params.permit(:status, :category_id, :search, :spam).except(:barangay_id)), class: "ml-1 hover:text-purple-900" %>
            </span>
          <% end %>
          <% if params[:spam] == "true" %>
            <span class="bg-red-100 text-red-800 px-3 py-1 rounded-full">
              Spam Reports Only
              <%= link_to "√ó", reports_path(params.permit(:status, :category_id, :search, :barangay_id).except(:spam)), class: "ml-1 hover:text-red-900" %>
            </span>
          <% end %>
          <%= link_to "Clear All", reports_path(params.permit(:status)), class: "text-blue-600 hover:text-blue-800 font-medium" %>
        </div>
      <% end %>
    <% end %>
  <% elsif current_user&.barangay_official? %>
    <%= form_with url: reports_path, method: :get, local: true, class: "space-y-3", data: { controller: "autosubmit", autosubmit_delay_value: 400 } do |f| %>
      <%= f.hidden_field :status, value: params[:status] %>
      <div class="flex flex-col sm:flex-row flex-wrap gap-3 items-stretch sm:items-end">
        <div class="flex-1 min-w-[250px]">
          <%= f.label :search, "Search Reports:", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :search,
              placeholder: "Search by title, description, or address...",
              value: params[:search],
              data: { action: "input->autosubmit#schedule" },
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500" %>
        </div>
        <div class="sm:w-auto">
          <%= f.label :category_id, "Category:", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.collection_select :category_id, Category.all.order(:name), :id, :name,
              { prompt: "All Categories", selected: params[:category_id] },
              { class: "px-3 py-2 border border-gray-300 rounded-lg" } %>
        </div>
        <div class="sm:w-auto">
          <%= f.submit "Apply Filters", class: "w-full sm:w-auto bg-blue-600 text-white px-6 py-2 rounded-lg font-semibold hover:bg-blue-700 transition" %>
        </div>
      </div>
      <% if params[:search].present? || params[:category_id].present? %>
        <div class="flex flex-wrap gap-2 items-center text-sm">
          <span class="font-medium text-gray-700">Active filters:</span>
          <% if params[:category_id].present? %>
            <span class="bg-indigo-100 text-indigo-800 px-3 py-1 rounded-full">
              Category: <%= Category.find(params[:category_id]).name %>
              <%= link_to "√ó", reports_path(params.permit(:status, :search).except(:category_id)), class: "ml-1 hover:text-indigo-900" %>
            </span>
          <% end %>
          <% if params[:search].present? %>
            <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full">
              Search: "<%= params[:search] %>"
              <%= link_to "√ó", reports_path(params.permit(:status, :category_id).except(:search)), class: "ml-1 hover:text-blue-900" %>
            </span>
          <% end %>
          <%= link_to "Clear All", reports_path(params.permit(:status)), class: "text-blue-600 hover:text-blue-800 font-medium" %>
        </div>
      <% end %>
    <% end %>
  <% else %>
    <!-- Resident filters: search + category only (no barangay/spam) -->
    <%= form_with url: reports_path, method: :get, local: true, class: "space-y-3", data: { controller: "autosubmit", autosubmit_delay_value: 400 } do |f| %>
      <%= f.hidden_field :status, value: params[:status] %>
      <div class="flex flex-col sm:flex-row flex-wrap gap-3 items-stretch sm:items-end">
        <div class="flex-1 min-w-[250px]">
          <%= f.label :search, "Search Reports:", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :search,
              placeholder: "Search by title, description, or address...",
              value: params[:search],
              data: { action: "input->autosubmit#schedule" },
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500" %>
        </div>
        <div class="sm:w-auto">
          <%= f.label :category_id, "Category:", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.collection_select :category_id, Category.all.order(:name), :id, :name,
              { prompt: "All Categories", selected: params[:category_id] },
              { class: "px-3 py-2 border border-gray-300 rounded-lg" } %>
        </div>
        <div class="sm:w-auto">
          <%= f.submit "Apply Filters", class: "w-full sm:w-auto bg-blue-600 text-white px-6 py-2 rounded-lg font-semibold hover:bg-blue-700 transition" %>
        </div>
      </div>
      <% if params[:search].present? || params[:category_id].present? %>
        <div class="flex flex-wrap gap-2 items-center text-sm">
          <span class="font-medium text-gray-700">Active filters:</span>
          <% if params[:category_id].present? %>
            <span class="bg-indigo-100 text-indigo-800 px-3 py-1 rounded-full">
              Category: <%= Category.find(params[:category_id]).name %>
              <%= link_to "√ó", reports_path(params.permit(:status, :search).except(:category_id)), class: "ml-1 hover:text-indigo-900" %>
            </span>
          <% end %>
          <% if params[:search].present? %>
            <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full">
              Search: "<%= params[:search] %>"
              <%= link_to "√ó", reports_path(params.permit(:status, :category_id).except(:search)), class: "ml-1 hover:text-blue-900" %>
            </span>
          <% end %>
          <%= link_to "Clear All", reports_path(params.permit(:status)), class: "text-blue-600 hover:text-blue-800 font-medium" %>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>

<!-- Reports List -->
<% if @reports.any? %>
  <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4">
    <% @reports.each do |report| %>
      <% cache [report, report.updated_at] do %>
      <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-100 transform hover:-translate-y-1">
        <div class="<%= current_user&.admin? ? 'p-4' : 'p-6' %>">
          <!-- Header -->
          <div class="flex justify-between items-start mb-4">
            <div class="flex-1">
              <h3 class="<%= current_user&.admin? ? 'text-lg font-bold text-gray-900 mb-1 leading-tight' : 'text-xl font-bold text-gray-900 mb-2' %>"><%= report.title %></h3>
              <div class="flex items-center text-sm text-gray-500">
                <span><%= time_ago_in_words(report.created_at) %> ago</span>
              </div>
            </div>
          </div>

          <!-- Description -->
          <p class="text-gray-600 <%= current_user&.admin? ? 'mb-3 leading-snug' : 'mb-4' %>"><%= truncate(report.description, length: current_user&.admin? ? 140 : 200) %></p>

          <!-- Badges -->
          <div class="flex flex-wrap gap-2 mb-4">
            <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-semibold">
              üè∑Ô∏è <%= report.category.name %>
            </span>
            <span class="bg-gray-100 text-gray-800 px-3 py-1 rounded-full text-sm font-semibold">
              üìç <%= report.barangay.name %>
            </span>
            <span class="<%= report.pending_approval? ? 'bg-purple-100 text-purple-800' : report.pending? ? 'bg-yellow-100 text-yellow-800' : report.in_progress? ? 'bg-orange-100 text-orange-800' : report.resolved? ? 'bg-green-100 text-green-800' : report.closed? ? 'bg-gray-100 text-gray-800' : 'bg-pink-100 text-pink-800' %> px-3 py-1 rounded-full text-sm font-semibold">
              <%= report.status.titleize %>
            </span>
            <% unless current_user&.resident? %>
              <span class="<%= report.critical? ? 'bg-red-100 text-red-800' : report.high? ? 'bg-orange-100 text-orange-800' : report.medium? ? 'bg-yellow-100 text-yellow-800' : 'bg-gray-100 text-gray-800' %> px-3 py-1 rounded-full text-sm font-semibold">
                <%= report.priority.titleize %> Priority
              </span>
            <% end %>
          </div>

          <!-- Actions -->
          <div class="flex justify-between items-center <%= current_user&.admin? ? 'pt-3' : 'pt-4' %> border-t">
            <div class="flex items-center gap-2 <%= current_user&.admin? ? 'text-xs' : 'text-sm' %> text-gray-500">
              <% if report.photos.attached? %>
                <span>üì∑ <%= report.photos.size %> photo(s)</span>
              <% end %>
              <% if current_user&.admin? && report.potential_spam? %>
                <span class="px-2 py-0.5 rounded-full bg-red-100 text-red-700 font-semibold">Spam?</span>
              <% end %>
            </div>
            <div class="flex items-center gap-2">
              <% if current_user&.admin? && (params[:status].to_s == 'pending_approval' || params[:spam] == 'true') %>
                <%= link_to "Accept", approve_report_path(report), data: { turbo_method: :post, turbo_confirm: "Approve this report?" }, class: "inline-flex items-center justify-center px-2 py-0.5 text-xs rounded border border-green-600 text-green-700 hover:bg-green-50" %>
                <%= link_to "Reject", reject_report_path(report), data: { turbo_method: :post, turbo_confirm: "Reject/close this report?" }, class: "inline-flex items-center justify-center px-2 py-0.5 text-xs rounded border border-red-600 text-red-700 hover:bg-red-50" %>
              <% end %>
              <%= link_to current_user&.admin? ? "View" : "View Details ‚Üí", report, class: "text-blue-600 hover:text-blue-800 font-semibold #{current_user&.admin? ? 'text-sm' : ''}" %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
  
  <!-- Pagination -->
  <div class="mt-8 flex justify-center">
    <%= paginate @reports %>
  </div>
<% else %>
  <div class="bg-gray-50 rounded-lg p-12 text-center">
    <div class="text-6xl mb-4">üìù</div>
    <p class="text-gray-600 text-lg mb-4">
      <% if params[:status].present? %>
        No <%= params[:status].humanize %> reports found.
      <% else %>
        No reports yet.
      <% end %>
    </p>
    <% if user_signed_in? && current_user.resident? %>
      <%= link_to "Create First Report", new_report_path, class: "inline-block bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition" %>
    <% end %>
  </div>
<% end %>

