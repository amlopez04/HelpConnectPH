<% content_for :google_maps_script do %>
  <script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_MAPS_API_KEY'] %>&libraries=places&callback=Function.prototype" async defer></script>
<% end %>

<div class="max-w-4xl mx-auto">
  <!-- Header -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">✏️ Edit Report</h1>
    <p class="text-gray-600">Update the report information</p>
  </div>

  <!-- Form Card -->
  <div class="bg-white rounded-lg shadow-lg p-8">
    <%= render 'form', report: @report %>
  </div>
</div>

